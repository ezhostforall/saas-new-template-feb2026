---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<style is:global>
  @import "../styles/global.css";
</style>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CRM Software - Manage your clients and deals" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header class="border-b bg-white shadow-sm">
      <div class="container mx-auto px-4 py-4">
        <nav class="flex items-center justify-between">
          <div class="text-xl font-bold">CRM Pro</div>
          <div class="flex space-x-4">
            <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
            <a href="/pricing" class="text-gray-600 hover:text-gray-900">Pricing</a>
            <a href="http://localhost:5173/app" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
              Login
            </a>
          </div>
        </nav>
      </div>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer class="bg-gray-50 border-t">
      <div class="container mx-auto px-4 py-8 text-center text-gray-600">
        <p>&copy; 2026 CRM Pro. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>